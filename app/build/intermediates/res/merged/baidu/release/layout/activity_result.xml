<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
    <com.uuzuche.lib_zxing.view.CustomTitle
        android:id="@+id/my_title_bar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
    </com.uuzuche.lib_zxing.view.CustomTitle>

    <TextView
        android:id="@+id/result_text"
        android:layout_below="@id/my_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="#00000000"
        android:gravity="left|top"
        android:lineSpacingMultiplier="1.5"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <Button
        android:id="@+id/save_info"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape"
        android:text="保存设备信息"
        android:layout_marginBottom="20dp"
        android:textColor="@color/blue"
        android:textSize="16sp"
        android:layout_below="@+id/result_text"
        android:layout_alignLeft="@+id/cancel_button"
        android:layout_alignStart="@+id/cancel_button" />

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/save_info"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:background="@drawable/shape"
        android:text="取消"
        android:textColor="@color/blue"
        android:textSize="16sp" />

</RelativeLayout>