<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    >
    <com.dtr.sict.views.CustomTitle
        android:id="@+id/my_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.dtr.sict.views.CustomTitle>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignLeft="@+id/export_excel_btn"
        android:layout_alignStart="@+id/export_excel_btn"
        android:layout_below="@+id/my_title_bar"
        android:visibility="visible"
        app:srcCompat="@drawable/logo"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:id="@+id/email_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:ems="10"
        android:hint="请输入邮箱地址"
        android:padding="10dp"
        android:textSize="15sp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/logo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        />

    <EditText
        android:id="@+id/company_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:ems="10"
        android:hint="请输入公司名称"
        android:padding="10dp"
        android:textSize="15sp"
        android:layout_below="@+id/email_address"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        />

    <EditText
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:ems="10"
        android:hint="请输入填表人"
        android:padding="10dp"
        android:textSize="15sp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/company_name"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        />


    <Button
        android:id="@+id/export_excel_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:background="@drawable/shape"
        android:text="生成表格并发送"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_below="@+id/user_name"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
